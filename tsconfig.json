{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"customConditions": [
			"node"
		],
		"module": "ES2022", // "NodeNext",
		"moduleResolution": "Bundler", // NodeNext
		"noImplicitOverride": true
	},
	"include": [
		"src/**/*.ts",
    	"postinstall.ts"
	],
	"exclude": [
		"node_modules"
	]
}